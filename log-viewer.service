[Unit]
Description=Log Viewer Service
After=network.target

[Service]
Type=simple
User=ansh
WorkingDirectory=~/documents/abc/log-viewer
ExecStart=~/.nvm/versions/node/v22.12.0/bin/node ~/.nvm/versions/node/v22.12.0/bin/npm start
Restart=always
Environment=NODE_ENV=development
Environment=PATH=~/.nvm/versions/node/v22.12.0/bin:/usr/bin:/bin
Environment=HOME=~

[Install]
WantedBy=multi-user.target